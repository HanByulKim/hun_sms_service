<head>
    <h1>Sign In</h1>
</head>

<style>
    #but_signin{
        width:100%;
        height:50px;
        font-size:30px;
        vertical-align:middle;
    }
</style>

<body>
    <!--</%= flash[:alert] %>-->
    <%= form_tag sessions_path do %>
        <div class="row container">
            <div class="input-field">
              <input placeholder="이메일 아이디" id="first_name" type="email" class="validate" name="email">
              <label for="E-MAIL ID">이메일 아이디</label>
            </div>
        </div>
        <div class="row container">
            <div class="input-field">
              <input placeholder="비밀번호" id="first_name" type="password" class="validate" name="password">
              <label for="PASSWORD">비밀번호</label>
            </div>
        </div>
        <div class="row container">
            <a class="waves-effect waves-light btn" id="but_signin"><input type="submit" value="">로그인</a>
        </div>
    <% end %>
    
</body>