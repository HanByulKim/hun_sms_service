
<style>
  #but_sign{
    width:100%;
    height:50px;
    font-size:30px;
    vertical-align:middle;
  }
  #sessions_top{
    padding-top: 10px;
      display: block;
      margin: auto;
      width: 60%;
  }
</style>

<head>
  <div class="row container"><img id="sessions_top" src="/mark.png"></div>
</head>

<body>
  <%= form_tag users_path do %>
    <div class="row container">
      <div class="input-field">
        <input placeholder="이메일 아이디" id="first_name" type="email" class="validate" name="email">
        <label for="E-MAIL ID">이메일 아이디</label>
      </div>
    </div>
    <div class="row container">
      <div class="input-field">
        <input placeholder="비밀번호" id="first_name" type="password" class="validate" name="password">
        <label for="PASSWORD">비밀번호</label>
      </div>
    </div>
    <div class="row container">
      <div class="input-field">
        <input placeholder="비밀번호 확인" id="first_name" type="password" class="validate" name="password_confirmation">
        <label for="PASSWORD CONFIRMATION">비밀번호 확인</label>
      </div>
    </div>
    <div class="row container">
      <div class="input-field">
        <input placeholder="이름" id="first_name" type="text" class="validate" name="name">
        <label for="NAME">이름</label>
      </div>
    </div>
    <div class="row container">
      <div class="input-field">
        <input placeholder="직업" id="first_name" type="text" class="validate" name="job">
        <label for="JOB">직업</label>
      </div>
    </div>
    <div class="row container">
      <div class="input-field">
        <input placeholder="전화번호" id="first_name" type="text" class="validate" name="phone">
        <label for="PHONE">전화번호</label>
      </div>
    </div>
      <!--
      Email :
      <input type="email" name="email"><br>
      Password :
      <input type="password" name="password"><br>
      Password Confirmation : 
      <input type="password" name="password_confirmation"><br>
      Name : 
      <input type="text" name="name"><br>
      Job :
      <input type="text" name="job"><br>
      Phone :
      <input type="text" name="phone"><br>
      -->
    <div class="row container">
            <input class="waves-effect waves-light btn" id="but_sign" type="submit" value="가입">
    </div>
  <% end %>
</body>