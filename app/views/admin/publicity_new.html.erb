<script>
  $(document).ready(function() {
    $('select').material_select();
  });
</script>

<%= form_tag '/admin/publicity/sendtext', method: 'post' do %>
    <div class="row">
        <form class="col s12">
          <div class="row">
            <div class="input-field col s6">
              <i class="material-icons prefix">mode_edit</i>
              <textarea id="icon_prefix2" class="materialize-textarea" type="text" name="script"></textarea>
              <label for="icon_prefix2">문자 내용</label>
            </div>
          </div>
        </form>
        
        <input type="hidden" name="sender" value="<%=current_user.id%>">
        <input type="submit">
    </div>
<% end %>

<table border="1" summary="리스트">
    <caption>리스트</caption>
    <thead>
        <tr>
            <th scope="col">이름</th>
            <th scope="col">직책</th>
            <th scope="col">전화번호</th>
            <th scope="col">이메일</th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <td colspan="4">hbk</td>
        </tr>
    </tfoot>
    <tbody>
        <% @session.each do |session| %>
            <tr>
                <th scope="row"><%= session.name %></th>
                <td><%= session.job %></td>
                <td><%= session.phone %></td>
                <td><%= session.email %></td>
            </tr>
        <% end %>
    </tbody>
</table>