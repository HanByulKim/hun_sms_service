
<body>
  <% @video.each_with_index do |video,i| %>
    <a href="/video/player?id=<%=video.id%>">
      <div class="col s12 m7">
        <div class="card horizontal">
            <div class="card-image">
              <img src="http://img.youtube.com/vi/<%=video.videoid%>/1.jpg">
            </div>
            <div class="card-stacked">
                <div class="card-content">
                    <h5><%=video.title%></h5>
                    <p><%=video.subtitle%></p>
                </div>
                <div class="card-action">
                    <i><%=video.created_at%></i>
                </div>
            </div>
        </div>
      </div>
    </a>
  <% end %>
  
