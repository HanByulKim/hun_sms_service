<p><%=@titles%></p>
<p><%=@subtitles%></p>
<p><%=@mainview%></p>
<p><%=@img%></p>

<% @titles.each_with_index do |blog,i| %>
    <div class="col s12 m7">
        <div class="card horizontal">
            <div class="card-image">
                <img src="<%=@img[i]%>">
            </div>
            <div class="card-stacked">
                <div class="card-content">
                    <h5><%=blog%></h5>
                    <p><%=@subtitles[i]%></p>
                    <p><%=@mainview[i]%></p>
                </div>
                <div class="card-action">
                    <a href="http://www.naver.com">기사 보러가기</a>
                </div>
            </div>
        </div>
    </div>
<% end %>